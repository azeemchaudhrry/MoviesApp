
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res/com.movieapp.droid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:clipChildren="true"
        android:elevation="0dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FFImageLoading.Cross.MvxCachedImageView
                    android:id="@+id/poster_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    app:MvxBind="ImagePath PosterUrl"/>
                <com.like.LikeButton
                    android:id="@+id/likeButton"
                    app:icon_type="heart"
                    app:icon_size="15dp"
                    app:anim_scale_factor="2"
                    app:is_enabled="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"
                    app:like_drawable="@drawable/heart_on"
                    app:unlike_drawable="@drawable/custom_heart_off"
                    app:circle_start_color="@android:color/white"
                    app:dots_primary_color="@android:color/white"
                    app:dots_secondary_color="@color/orange"
                    app:circle_end_color="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/star_imageView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@+id/rating_TextView"
                        android:tint="@color/orange"
                        android:src="@drawable/ic_star"/>
                    <movieapp.droid.extensions.textviewext.FuturaTextView
                        android:id="@+id/rating_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/orange"
                        android:layout_alignParentEnd="true"
                        android:text="8.1"
                        android:textSize="13sp"
                        android:layout_centerInParent="true"
                        app:MvxBind="Text VoteAverage"/>
                    <movieapp.droid.extensions.textviewext.FuturaTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorLight"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:text="2019"
                        android:textSize="13sp"
                        app:MvxBind="Text Year"/>
                </RelativeLayout>
                <movieapp.droid.extensions.textviewext.FuturaTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    custom:textStyle="bold"
                    android:textColor="@color/textColorDark"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp"
                    app:MvxBind="Text Title"/>
                <movieapp.droid.extensions.textviewext.FuturaTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/textColorLight"
                    android:layout_marginHorizontal="8dp"
                    app:MvxBind="Text GenreString"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>