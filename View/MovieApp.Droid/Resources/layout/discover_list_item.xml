<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.movieapp.droid"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:clipChildren="true"
        android:elevation="0dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FFImageLoading.Cross.MvxCachedImageView
                android:id="@+id/poster_imageView"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:MvxBind="ImagePath PosterUrl"
                android:src="@drawable/sample"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.like.LikeButton
                    android:id="@+id/likeButton"
                    app:icon_type="heart"
                    app:icon_size="15dp"
                    app:anim_scale_factor="2"
                    app:is_enabled="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"
                    app:circle_start_color="@android:color/white"
                    app:dots_primary_color="@color/colorAccent"
                    app:dots_secondary_color="@color/colorPrimary"
                    app:circle_end_color="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_time"/>
                        <movieapp.droid.extensions.textviewext.FuturaTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:text="2018"
                            app:MvxBind="Text ReleaseDate"/>
                    </LinearLayout>
                    <!-- Title -->
                    <movieapp.droid.extensions.textviewext.FuturaTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        custom:textStyle="bold"
                        android:textStyle="bold"
                        android:textColor="@color/textColorDark"
                        android:maxLines="2"
                        android:text="Once upon a time Once upon a time Once upon a time"
                        android:layout_marginHorizontal="6dp"
                        android:layout_marginVertical="4dp"
                        app:MvxBind="Text Title"/>
                    
                    <!-- Rating -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentStart="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/star_imageView"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:tint="@color/orange"
                            android:src="@drawable/ic_star"/>
                        <movieapp.droid.extensions.textviewext.FuturaTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_gravity="center_vertical"
                            android:text="8.7"
                            android:textColor="@color/orange"
                            app:MvxBind="Text VoteAverage"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>